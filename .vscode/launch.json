{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb_server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/svc_launch",
            "args": ["-SERVICE_UPDATE_TICK=1000",
                    "-SERVICE_TYPE=1",
                    "-SERVICE_ID=1",
                    "-alsologtostderr=true",
                    "-log_dir=../logs/","-colorlogtostderr=true",
                    "-max_log_size=512",
                    "-logbufsecs=1",
                    "-vmodule=info=2,error=3"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}